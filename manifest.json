{
  "manifest_version": 3,
  "name": "GenBooklist",
  "version": "0.1.0",
  "description": "Generate book list from various book sites.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://read.readmoo.com/*",
    "https://www.kobo.com/tw/zh/library*",
    "https://viewer-ebook.books.com.tw/viewer/*",
    "https://ebook.hyread.com.tw/Template/store/member/my_bookcase_column_list.jsp*",
    "https://ebook.hyread.com.tw/Template/store/member/my_bookcase_cover_list.jsp*",
    "https://www.pubu.com.tw/bookshelf*",
    "https://play.google.com/books*",
    "https://mybook.taiwanmobile.com/bookcase/list*",
    "https://www.amazon.com/hz/mycd/digital-console/contentlist/*",
    "https://webreader.hamibook.com.tw/HamiBookcase*",
    "https://www.amazon.cn/hz/mycd/digital-console/contentlist/*",
    "https://www.bookwalker.com.tw/bookcase/available_book_list*"
  ],
  "action": {
    "default_title": "GenBooklist",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "sites.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}